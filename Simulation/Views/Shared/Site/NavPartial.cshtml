@{
    string controllerName = ViewContext.RouteData.Values["controller"].ToString();
    string actionName = ViewContext.RouteData.Values["action"].ToString();
}
<nav class="navbar navbar-expand navbar-dark bg-primary">
    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">RBoard</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarColor01">
        <ul class="navbar-nav mr-auto">
            <li class="nav-item active">
                <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home <span class="sr-only">(current)</span></a>
            </li>
        </ul>
        @if (User.Identity.IsAuthenticated)
        {
            <ul class="navbar-nav mr-md-2">
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#" aria-haspopup="true" aria-expanded="false">
                        <i class="fas fa-user-alt fa-2x text-success"></i>
                    </a>
                    <div class="dropdown-menu dropdown-menu-md-right">
                        <a class="dropdown-item" asp-area="" asp-controller="Account" asp-action="ProfileView">
                            <i class="fas fa-user"></i>
                            Profile
                        </a>
                        <div class="dropdown-divider"></div>
                        <a class="dropdown-item" asp-area="" asp-controller="Account" asp-action="Logout">
                            <i class="fas fa-sign-out-alt"></i>
                            Sign out
                        </a>
                    </div>
                </li>
            </ul>
        }
        else
        {
            <ul class="navbar-nav mr-md-2">
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#" aria-haspopup="true" aria-expanded="false">
                        <i class="fas fa-user-alt fa-2x"></i>
                    </a>
                    <div class="dropdown-menu dropdown-menu-md-right">
                        <a class="dropdown-item" asp-area="" asp-controller="Account" asp-action="Login" asp-route-returnUrl="@controllerName/@actionName">
                            <i class="fas fa-sign-in-alt"></i>
                            Sign in
                        </a>
                        <div class="dropdown-divider"></div>
                        <a class="dropdown-item" asp-area="" asp-controller="Account" asp-action="Register">
                            <i class="fas fa-user-plus"></i>
                            Register
                        </a>
                    </div>
                </li>
            </ul>
        }
    </div>
</nav>
@await Html.PartialAsync("ModalPartial")