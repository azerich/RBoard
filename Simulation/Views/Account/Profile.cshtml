@model SiteUserViewModel
<h1>Profile page</h1>
<form asp-area="" asp-controller="Account" asp-action="Profile" method="post" enctype="multipart/form-data">
    <fieldset>
        <legend>Your credentials</legend>

        <div class="form-group row">
            <label asp-for="Id" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <div class="form-control-plaintext">@Model.Id</div>
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="UserName" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <div class="form-control-plaintext">@Model.UserName</div>
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="Email" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <div class="form-control-plaintext">@Model.Email</div>
            </div>
        </div>

        <div class="row">
            <label asp-for="RegisterDate" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <div class="form-control=plaintext">@Model.RegisterDate</div>
            </div>
        </div>

        <div class="row">
            <label asp-for="ConfirmDate" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <div class="form-control-plaintext">@Model.ConfirmDate</div>
            </div>
        </div>

        <div class="row">
            <label asp-for="LastLoginDate" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <div class="form-control-plaintext">@Model.LastLoginDate</div>
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="FirstName" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="FirstName" class="form-control" />
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="MiddleName" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="MiddleName" class="form-control" />
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="LastName" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="LastName" class="form-control" />
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="Gender" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <select asp-for="Gender" asp-items="Html.GetEnumSelectList<GenderType>()" class="form-control"></select>
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="BirthDate" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="BirthDate" class="form-control" />
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="Locale" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Locale" class="form-control" />
            </div>
        </div>
    </fieldset>
    <button type="submit" class="btn btn-primary">Save</button>
</form>
<a class="btn btn-outline-danger" asp-area="" asp-controller="Account" asp-action="DeleteAccount" asp-route-userid="@Model.Id">Permanently delete account @User.Identity.Name</a>